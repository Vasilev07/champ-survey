mixin initial()
    div.survey-create
      div#initial-create
        div.form-group.initial-field.survey-name-exist-msg
          label
        div.form-group.initial-field
          input#survey-name.form-control(type='text', name='survey-name', placeholder="Survey name")
        .col-sm-5
        div.form-group.initial-field
          label(for='categories') Category:
          select#categories.form-control(name='survey-type')
            optgroup(label="Category type")
            each category in categories
              option(value=category.name)
                | #{category.name}
        .form-group.initial-field
            form#loginForm.form-horizontal(action='/create/category', method='POST')
              .form-group
                .col-sm-5
                label.control-label.col-sm-2(for='category') Create Category:
                .col-sm-4
                input#loginUsername.form-control(type='text', placeholder='Enter category name', name='categoryName')
                .col-sm-1                
                button.btn.btn-success(type='submit',value='Create Category') Create Category
            //- button#continue-btn.btn.btn-primary(type='button') Continue